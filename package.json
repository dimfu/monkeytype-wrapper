{
  "name": "monkeytype-wrapper",
  "version": "0.1.0",
  "description": "A wrapper to work with Monkeytype API",
  "publishConfig": {
    "access": "public"
  },
  "license": "MIT",
  "homepage": "https://github.com/dimfu/monkeytype-wrapper",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dimfu/monkeytype-wrapper.git"
  },
  "bugs": {
    "url": "https://github.com/dimfu/monkeytype-wrapper/issues"
  },
  "exports": {
    "require": "./dist/index.js",
    "import": "./dist/index.mjs"
  },
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build-fast": "tsup src/index.ts --format cjs,esm",
    "build": "pnpm run build-fast --dts-resolve",
    "prepublishOnly": "pnpm run build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^0.39.5",
    "@types/node": "^20.3.1",
    "eslint": "^8.42.0",
    "lint-staged": "^13.2.2",
    "simple-git-hooks": "^2.8.1",
    "tsup": "6.6.3",
    "typescript": "4.9.5"
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged"
  },
  "lint-staged": {
    "*": "eslint --fix"
  }
}
